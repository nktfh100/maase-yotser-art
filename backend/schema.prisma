datasource mysql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "mysql"
  relationMode      = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  isAdmin   Boolean   @default(false)
  isEditor  Boolean   @default(false)
  createdAt DateTime? @default(now())
}

model Post {
  id                          String       @id @default(cuid())
  title                       String       @default("")
  imageFile_filesize          Int?
  imageFile_extension         String?
  imageFile_width             Int?
  imageFile_height            Int?
  imageFile_id                String?
  collections                 Collection[] @relation("Collection_posts")
  from_HomePage_featuredPosts HomePage[]   @relation("HomePage_featuredPosts")
}

model Collection {
  id    String @id @default(cuid())
  name  String @default("")
  slug  String @default("")
  posts Post[] @relation("Collection_posts")

  @@index([slug])
}

model HomePage {
  id                       Int     @id
  header                   String  @default("")
  carouselImage1_filesize  Int?
  carouselImage1_extension String?
  carouselImage1_width     Int?
  carouselImage1_height    Int?
  carouselImage1_id        String?
  carouselImage2_filesize  Int?
  carouselImage2_extension String?
  carouselImage2_width     Int?
  carouselImage2_height    Int?
  carouselImage2_id        String?
  carouselImage3_filesize  Int?
  carouselImage3_extension String?
  carouselImage3_width     Int?
  carouselImage3_height    Int?
  carouselImage3_id        String?
  carouselImage4_filesize  Int?
  carouselImage4_extension String?
  carouselImage4_width     Int?
  carouselImage4_height    Int?
  carouselImage4_id        String?
  featuredPosts            Post[]  @relation("HomePage_featuredPosts")
}

model AboutPage {
  id                        Int     @id
  header                    String  @default("")
  aboutName                 String  @default("")
  aboutDescription          String  @default("") @mysql.Text
  aboutImageRight_filesize  Int?
  aboutImageRight_extension String?
  aboutImageRight_width     Int?
  aboutImageRight_height    Int?
  aboutImageRight_id        String?
  aboutImageLeft_filesize   Int?
  aboutImageLeft_extension  String?
  aboutImageLeft_width      Int?
  aboutImageLeft_height     Int?
  aboutImageLeft_id         String?
}
